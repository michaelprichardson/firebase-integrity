  "homepage": "https://github.com/michaelprichardson/firebase-integrity#readme",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "axios": "^0.21.1",
    "firebase-functions-test": "^0.2.3",
    "jest": "^27.2.3",
    "prettier": "^2.3.0",
